<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/black2" />

            <LinearLayout
                android:id="@+id/view_car_profile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/setting_item_selector"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/car_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/car_band_glk" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2011年奔驰GLK 200"
                        android:textSize="16sp" />

                    <TextView
                        style="@style/txt_ContextStyle1"
                        android:layout_marginTop="10dp"
                        android:text="排量：3.0L"
                        android:textSize="14.0dip" />

                    <TextView
                        style="@style/txt_ContextStyle1"
                        android:layout_marginTop="10dp"
                        android:text="变速箱：自动"
                        android:textSize="14.0dip" />
                    
                    <TextView
                        style="@style/txt_ContextStyle1"
                        android:layout_marginTop="10dp"
                        android:text="油耗：7.8L-11.3L"
                        android:textSize="14.0dip" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp" >
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/black2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:layout_marginBottom="2dp"
                android:background="@drawable/setting_item_selector"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car_huohuasai" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/car_band"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="奔驰（Benz）"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/fitting_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="火花塞"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/fitting_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A004159440326"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单位："
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/unit_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="产地："
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/label_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="德国"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/scan_car_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/country_de" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单价："
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/currency_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85.00"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 2 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/black2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:layout_marginBottom="2dp"
                android:background="@drawable/setting_item_selector"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car_shachepian" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/car_band2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="奔驰（Benz）"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/fitting_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="前刹车片"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/fitting_number2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A0044208720"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单位："
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/unit_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="副"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="产地："
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/label_country2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="德国"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/take_car_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/country_de" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单价："
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/currency_unit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1170.00"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 3 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/black2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:background="@drawable/setting_item_selector"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car_yushua" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/car_band3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="奔驰（Benz）"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/fitting_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="雨刷"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/fitting_number3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A2518200745"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单位："
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/unit_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="副"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="产地："
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/label_country3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="德国"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/country_de" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单价："
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/currency_unit3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/price3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="322.00"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>